<%= form_with(model: setting, local: true) do |form| %>
  <% if setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
      <% setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    Add new section
    <%= form.text_field :section, id: :setting_section, class: 'form-control', columns: 5 %>
    <%= form.hidden_field :setting_name, value: 'section' %>
  </div>

  <div class="form-group">
    <%= form.submit "Добавить", class: "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
